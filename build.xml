<?xml version="1.0" encoding="UTF-8"?>
   <project name="mc-tpcc" default="compile" basedir=".">
   <property name="javac1.7" location="/usr/lib/jvm/java-7-openjdk-amd64/bin/javac" />   

    <property name="src.dir"     value="src"/>
    <property name="lib.dir"     value="libs"/>

    <property name="build.dir"   value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>

    <path id="build.classpath">
        <fileset dir="${lib.dir}">
          <include name="**/*.jar" />
        </fileset>
    </path>

     <target name="compile">
        <mkdir dir="${classes.dir}"/>
        <javac fork="yes" executable="${javac1.7}" srcdir="${src.dir}" destdir="${classes.dir}" classpathref="build.classpath" encoding="UTF-8">
        </javac>
    </target>

    <target name="clean">
       <delete includeemptydirs="true">
          <fileset dir="build" includes="**/*"/>
       </delete>
    </target>

</project>
